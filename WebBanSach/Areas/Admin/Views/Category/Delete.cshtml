@model Category

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pd-2">
            <h2>Delete category</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All"></div> @*hiện tất cả lỗi ỡ 1 khu vực*@
            <div class="mb-3">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" disabled class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DisplayOrder">DisplayOrder</label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">
            Delete
            </button>

            <a asp-controller="Category" asp-action="Index">Back to list</a>
    </div>
</form>

@section Scripts
{
    @*Validate ở client không chạy tới sever*@
  <partial name="_ValidationScriptsPartial"/>
}